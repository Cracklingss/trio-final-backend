generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  password String
  bio String?
  firstName String?
  lastName String?
  gender String?
  contactNumber String?
  profilePicture String?
  rate Int @default(0)
  isActive Boolean @default(true)
  address String?
  userType String?
  onBoarded Boolean @default(false)
  contactMethod String?
}

model Services {
  id String @id @default(uuid())
  name String
  service String
  description String
  availability String
  serviceLoc String
  isActive Boolean @default(true)
}

model ReportedUsers {
  id String @id @default(uuid())
  reportedUser String
  userType String
  reasons String
  others String @default("")
  description  String 
  status String @default("In Progress")
}

model Bookings {
  id String @id @default(uuid())
  bookingDate DateTime @default(now())
  bookingTime DateTime
  address String
  bookerName String
  bookerContact String
  bookerEmail String @default("")
  status String @default("In Progress")
  isActive Boolean @default(true)
  details String
}

model Reviews {
  id String @id @default(uuid())
  date DateTime @default(now())
  profilePicture String
  custmerName String
  rate Int @default(0)
  description String
}