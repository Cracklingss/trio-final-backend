generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String? @unique
  password String?
  bio String?
  firstName String?
  lastName String?
  gender String?
  contactNumber String?
  profilePicture String?
  rate Int @default(0)
  isActive Boolean @default(true)
  address String?
  userType String?
  onBoarded Boolean @default(false)
  contactMethod String?
  services  Services[]
  bookings Bookings[]
}

model Services {
  id String @id @default(uuid())
  service String
  description String
  availability String
  serviceLoc String
  isActive Boolean @default(true)
  status String @default("For Approval")
  laborerId String

  laborer Users @relation(fields: [laborerId], references: [id])
}

model ReportedUsers {
  id String @id @default(uuid())
  userId String?
  reportedUser String?
  userType String?
  reasons String?
  others String @default("")
  description  String?
  status String @default("In Progress")
}

model Bookings {
  id String @id @default(uuid())
  bookingDate String?
  bookingTime String?
  address String?
  bookerName String?
  bookerContact String?
  bookerEmail String @default("")
  status String @default("In Progress")
  isActive Boolean @default(true)
  details String?
  laborerId String

  laborer Users @relation(fields: [laborerId], references: [id])
}

model Reviews {
  id String @id @default(uuid())
  date DateTime @default(now())
  profilePicture String
  custmerName String
  rate Int @default(0)
  description String
}

model PasswordRecovery {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}